extends:
  eslint-config-airbnb

parser:
  babel-eslint

settings:
  ecmascript: 6

ecmaFeatures:
  jsx: true
  modules: true
  destructuring: true
  classes: true
  forOf: true
  blockBindings: true
  arrowFunctions: true

env:
  browser: true

rules:
  arrow-body-style: 0
  arrow-parens: 0
  class-methods-use-this: 0
  comma-dangle: 0
  no-multi-spaces: 0
  global-require: 0
  func-names: 0
  indent: 0
  key-spacing: 0
  jsx-quotes: [2, "prefer-single"]
  max-len: 0
  new-cap: 0
  no-plusplus: 0
  no-return-assign: 0
  no-param-reassign: 0
  no-underscore-dangle: 0
  no-loop-func: 0
  one-var: 0
  one-var-declaration-per-line: 0
  quote-props: 0
  template-curly-spacing: [2, "always"]
  # import rules
  import/extensions: 0
  import/no-extraneous-dependencies: 0
  import/no-unresolved: 0
  import/prefer-default-export: 0
  import/first: 0
